<div class="bg-white rounded-t-lg overflow-hidden p-4 px-3 py-10 bg-gray-200 flex justify-center align-middle h-screen">
  <div class="w-full max-w-xs">
    <h3 class="text-3xl text-center text-gray-800 font-bold py-6 px-4 ">Login</h3>
    <%= form_for @changeset, Routes.session_path(@conn, :login), [class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"], fn f -> %>
      <div class="mb-4">
        <%= label f, :email, class: "control-label", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= email_input f, :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline align-middle", placeholder: "john@email.com" %>
      </div>
      <div class="mb-6">
        <%= label f, :password, class: "control-label", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= password_input f, :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "******************" %>
      </div>
      <div class="flex items-center justify-between">
        <%= submit "Sign In", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
          Forgot your password?
        </a>
      </div>
    <% end %>
  </div>
</div>
