<div class="flex items-center flex-col mb-16">
  <h2 class="text-gray-800 text-3xl font-semibold my-6"><%= @board.name %></h2>
  <div class="flex">
    <%= link "Edit Board", to: Routes.board_path(@conn, :edit, @board.id), method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
    <%= form_for @changeset, Routes.board_path(@conn, :update, @board.id), fn f -> %>
      <%= hidden_input f, :archived, value: true %>
      <%= submit "Archive Board", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-2" %>
    <% end %>
    <%= link "Add New List", to: Routes.board_list_path(@conn, :new, @board.id), method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
<div class="w-full h-full">
  <div class="flex h-full" id="board-lists">
    <%= Enum.map @board.board_lists, fn(board_list) -> %>
      <%= render TodoWeb.BoardListView, "_board_list.html", board_list: board_list, conn: @conn %>
    <% end %>
  </div>
</div>
